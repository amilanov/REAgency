<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2>Nije moguće kreirati aktivnost zbog sljedećih grešaka:</h2>

      <ul>
      <% @activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Naziv_aktivnosti %><br />
    <%= f.text_field :activityName %>
  </div>
  <div class="field">
    <%= f.label :Datum_početka %><br />
    <%= f.datetime_select :startDate %>
  </div>
  <div class="field">
    <%= f.label :Datum_završetka %><br />
    <%= f.datetime_select :endDate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
