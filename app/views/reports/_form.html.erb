<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2>Nije moguće kreirati izvještaj zbog sljedećih grešaka:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Izvještaj %><br />
    <%= f.text_field :report %>
  </div>
  <div class="field">
    <%= f.label :Datum %><br />
    <%= f.datetime_select :reportDate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
