<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <table style="width: 100%">
      <tr style="border-bottom: 1px solid lightgray;">
        <td style="padding-top: 10px; padding-bottom: 10px; font-size: 20px; width: 50%">Ukupan broj nekretnina: <%= @total %></td>
        <td></td>
      </tr>
      <tr>
        <td><br/></td>
        <td></td>
      </tr>
      <tr style="border-bottom: 1px solid lightgray;">
        <td style="padding-top: 5px; padding-bottom: 5px; width: 50%"><b>Naziv</b></td>
        <td style="padding-top: 5px; padding-bottom: 5px; width: 50%"><b>Korisnik</b></td>
      </tr>
      <% @rented.each do |rented| %>
        <tr style="border-bottom: 1px solid lightgray;">
          <td style="padding-top: 5px; padding-bottom: 5px; width: 50%"><%= link_to rented.real_estate.realEstateName, rented.real_estate %></td>
          <td style="padding-top: 5px; padding-bottom: 5px; width: 50%"><%= rented.user.username %></td>
        </tr>
      <% end %>
    </table>
    <div style="margin-top: 25px"><%= link_to 'Nazad', reports_path %></div>
  </div>
</div>