<h1>Sobe</h1>

<div style="margin-left: 40px">
    <%= will_paginate @real_estates, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
</div>

<% if current_user && current_user.can_create_real_estate? %>
  <div style="margin-left: 40px">
    <%= link_to 'Nova nekretnina', new_real_estate_path(real_estate_type: 'Soba'), class: "btn btn-large btn-primary" %>
  </div>
  <br/>
<% end %>

 <%= form_for("real_states", :html => { :class => "form-horizontal"}) do |f| %>
    <%= f.collection_select :city_id, City.all, :id, :cityName, {:include_blank => 'Odaberite grad'}, {class: "btn btn-primary dropdown-toggle"} %>
    <%=  f.submit "Osvježi", class: "btn btn-large btn-primary"%>
  <% end %>

<ul class="users">
    <%= render @real_estates %>
</ul>

<div style="margin-left: 40px">
    <%= will_paginate @real_estates, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
</div>

