<h1>Uređivanje korisnika</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <div class="form-group">
        <%= f.label :Ime %>
        <%= f.text_field :firstName, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Prezime %>
        <%= f.text_field :lastName, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Adresa %>
        <%= f.text_field :address, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Lozinka %>
        <%= f.password_field :password, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Potvrdi_lozinku %>
        <%= f.password_field :password_confirmation, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Email %>
        <%= f.text_field :email, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Korisničke_role %>
        <%= f.collection_select :role_ids, @user_roles, :id, :roleName, {:selected => @user.roles.map(&:id)}, {class: "btn dropdown-toggle form-control", multiple: true} %>
      </div>

      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "file_upload" %>
      </div>

      <div class="form-group">
        <%= f.submit "Spasi", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Prikaži', @user %> |
<%= link_to 'Nazad', users_path %>
