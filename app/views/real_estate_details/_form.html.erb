<%= form_for(@real_estate_detail) do |f| %>
  <% if @real_estate_detail.errors.any? %>
    <div id="error_explanation">
      <h2>Nije moguće dodati detalje zbog sljedećih grešaka:</h2>

      <ul>
      <% @real_estate_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Veličina %><br />
    <%= f.text_field :size %>
  </div>
  <div class="field">
    <%= f.label :Slike %><br />
    <%= f.text_field :images %>
  </div>
  <div class="field">
    <%= f.label :Tip_nekretnine %><br />
    <%= f.text_field :realEstateType %>
  </div>
  <div class="field">
    <%= f.label :Stanje %><br />
    <%= f.text_field :condition %>
  </div>
  <div class="field">
    <%= f.label :Napomena %><br />
    <%= f.text_field :note %>
  </div>
  <div class="field">
    <%= f.label :real_estate_id %><br />
    <%= f.number_field :real_estate_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
