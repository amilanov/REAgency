<%= form_for(@role) do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2>Nije moguće kreirati korisničku rolu zbog sljedećih grešaka:</h2>

      <ul>
      <% @role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Naziv_role %><br />
    <%= f.text_field :roleName %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
